{% extends "base.html.twig" %}
{% block stylesheets %}
	<style>
		h1 {
			margin-top: 8%;
			color: #27476E;
			text-align: center;
			margin-bottom: 6%;
			font-size: 300%
		}
		.form-container {
			width: 40%;
			margin: 0 auto;
			text-align: center;
			height: 40%;
		}

		.form-control {
			border-radius: 30px;
			margin-top: 7%;
			height: 50px;
		}

		.bouton {
			background-image: linear-gradient(to right, #27476E 0%, #4d6685 51%, #27476E 100%);
			margin-top: 10%;
			border-radius: 30px;
			background-size: 200% auto;
			color: white;
			width: 50%;
			height: 50px;
			border: #27476E;
			font-size: 150%;
			box-shadow: 0 0 20px #eee;
			transition: 0.5s;
		}
		.bouton:hover {
			background-position: right center; /* change the direction of the change here */
			color: #fff;
			text-decoration: none;
		}
		@media(max-width: 720px) {
			.form-container {
				width: 70%;
				height: 40%;
			}
			h1 {
				margin-top: 25%;
				margin-bottom: 20%;
				font-size: 250%
			}
			.form-control {
				margin-top: 12%;
			}

		}
	</style>
{% endblock %}

{% block body %}

	<h1>C o n n e x i o n</h1>

	<div class="form-container">
		<form action="{{ path('security_connexion') }}" method="POST">
			<div class="form-group">
				<input placeholder="Adresse Email" required name="_username" type="text" class="form-control" autocomplete="off">
			</div>
			<div class="form-group">
				<input placeholder="Mot de Passe" required name="_password" type="password" class="form-control" autocomplete="off">
			</div>

			<div class="form-group">
				<button type="submit" class="bouton">Se connecter</button>

			</div>
		</form>
	</div>
{% endblock %}
